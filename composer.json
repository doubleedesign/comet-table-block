{
	"name": "doubleedesign/comet-table-block",
	"type": "wordpress-plugin",
	"description": "A WordPress plugin for creating Comet Components tables in the block editor.",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Leesa Ward",
			"email": "leesa@doubleedesign.com.au"
		},
		{
			"name": "Aki Hamano"
		}
	],
	"require-dev": {
		"squizlabs/php_codesniffer": "*",
		"wp-coding-standards/wpcs": "^3.1"
	},
	"scripts": {
		"phpcs": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsextra,vendor/phpcsstandards/phpcsutils",
		"lint": "phpcs ./ --standard=./phpcs.ruleset.xml"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}

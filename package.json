{
	"name": "flexible-table-block",
	"version": "1.0.0",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"start": "chokidar \"src/**/*\" -c \"npm-run-all -p js:sourcemap sass:expanded\" --initial",
		"build": "npm-run-all -s clean js:compressed sass:compressed",
		"sass:expanded": "sass src/style.scss:build/style.css src/editor-style.scss:build/editor-style.css --style=expanded",
		"sass:compressed": "sass src/style.scss:build/style.css src/editor-style.scss:build/editor-style.css --style=compressed --no-source-map",
		"js:sourcemap": "cross-env NODE_ENV=development wp-scripts build src/index --output-path build",
		"js:compressed": "wp-scripts build src/index --output-path build",
		"clean": "rimraf build",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:php": "composer lint",
		"test": "npm run lint:js && npm run test:unit",
		"test:unit": "wp-scripts test-unit-js"
	},
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@wordpress/env": "^4.1.0",
		"@wordpress/scripts": "^17.1.0",
		"chokidar-cli": "^3.0.0",
		"cross-env": "^7.0.3",
		"npm-run-all": "^4.1.5",
		"opener": "^1.5.2",
		"prettier": "npm:wp-prettier@2.2.1-beta-1",
		"rimraf": "^3.0.2",
		"stylelint-config-rational-order": "^0.1.2"
	},
	"dependencies": {
		"@emotion/react": "^11.4.1",
		"@emotion/styled": "^11.3.0",
		"@wordpress/icons": "^5.0.0"
	}
}

{
	"name": "ultimate-table-block",
	"version": "1.0.0",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"release:clean-dir": "cross-conf-env rimraf ./npm_package_name",
		"release:clean-zip": "cross-conf-env rimraf ./*.zip",
		"release:mkdir": "cross-conf-env mkdirp npm_package_name",
		"release:copy-src": "cross-conf-env cpx \"./src/**/*\" ./npm_package_name/src",
		"release:copy-build": "cross-conf-env cpx \"./build/**/*\" ./npm_package_name/build",
		"release:copy-plugin": "cross-conf-env cpx \"./npm_package_name.php\" ./npm_package_name",
		"release:archive": "cross-conf-env bestzip ./npm_package_name-npm_package_version.zip ./npm_package_name",
		"release": "npm-run-all -s release:clean-zip release:mkdir release:copy-* release:archive release:clean-dir"
	},
	"devDependencies": {
		"@wordpress/env": "^2.1.0",
		"@wordpress/icons": "^2.8.0",
		"@wordpress/scripts": "^12.5.0",
		"bestzip": "^2.1.7",
		"classnames": "^2.2.6",
		"cpx": "^1.5.0",
		"cross-conf-env": "^1.2.1",
		"eslint-config-prettier": "^7.0.0",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-plugin-prettier": "^3.2.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"opener": "^1.5.2",
		"rimraf": "^3.0.2",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-config-wordpress": "^17.0.0"
	},
	"dependencies": {}
}
